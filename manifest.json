{
    "manifest_version": 3,
    "name": "ProcrastiNator",
    "description": "Never miss an assignment again! Get rewarded for completing tasks early and reminders to stay on track.",
    "version": "1.0",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "192": "icons/icon192.png"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "host_permissions": ["https://*.instructure.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "192": "icons/icon192.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://*.instructure.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  