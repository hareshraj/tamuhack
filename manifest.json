{
  "manifest_version": 3,
  "name": "ProcrastiNate",
  "description": "Stay on top of your assignments with iCal integration.",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "notifications", "alarms"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "192": "icons/icon192.png"
    }
  },
  "content_scripts": [],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "192": "icons/icon192.png"
  }
}