{
    "manifest_version": 3,
    "name": "ProcrastiNator",
    "description": "Never miss an assignment again! Get rewarded for completing tasks early and reminders to stay on track.",
    "version": "1.0",
    "permissions": [
        "storage", 
        "alarms", 
        "notifications", 
        "activeTab",
        "scripting"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "192": "icons/icon192.png"
    },
    "host_permissions": [
      "https://*.instructure.com/*",
      "https://canvas.tamu.edu/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "192": "icons/icon192.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://*.instructure.com/*", "https://canvas.tamu.edu/*"],
        "js": ["content.js"]
      }
    ]
  }
  